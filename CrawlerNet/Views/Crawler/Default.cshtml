@using CrawlerNet.Utilities
@model CrawlerNet.ViewModels.CrawlerViewModel
@{
    ViewBag.Title = "Crawler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    
    
    <div class="col-lg-12">
        
        
                @Html.Alert(AlertType.Danger, Model.ErrorMsg)
                @Html.Alert(AlertType.Success, Model.SuccessMsg)

        <div class="panel panel-success">

            <div class="panel-heading">

                @using (Html.BeginForm())
                {
                    <div class="row">

                        <div class="col-lg-8">
                                    <div class="form-group input-group-sm">
                                        @Html.TextBoxFor(m => m.UrlToCrawl, new { @class = "form-control" })
                                    </div>                                    
                                
                                    <div class="form-actions no-color input-group-sm">
                                        <input type="submit" value="Crawl NOW" class="btn btn-danger" />
                                    </div>               
                            </div>
                            
                        <div class="col-lg-4">
                            
                            @Html.ActionLink("Export JSON", "ExportByJson", "Crawler", null, new { type = "submit", @class = "btn btn-warning" })
                            @Html.ActionLink("Export Text", "ExportByText", "Crawler", null, new { type = "submit", @class = "btn btn-warning" })
                            @Html.ActionLink("Export Excel", "ExportByExcel", "Crawler", null, new { type = "submit", @class = "btn btn-warning" })

                        </div>

                    </div>
                }     

               
        
            </div>
            <div class="panel-body">
                
                @foreach (var item in Model.CrawledLinks)
                {
                    <a href="@item.AbsoluteUri"> @item.AbsoluteUri </a><br />
                }

            </div>
 
    </div>


</div>

</div>

