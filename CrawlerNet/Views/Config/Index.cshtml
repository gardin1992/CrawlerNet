                                <p class="help-block">Example block-level help text here.</p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.maxPagesToCrawlPerDomain, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.maxPagesToCrawlPerDomain, new { @class = "form-control" })

                                <p class="help-block">Example block-level help text here.</p>
