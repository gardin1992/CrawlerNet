                                <p class="help-block">Example block-level help text here.</p>
                            </div>
                           

                        </div>
                        <div class="col-lg-4">


                            <div class="form-group">
                                @Html.LabelFor(m => m.minRetryDelayInMilliseconds, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.minRetryDelayInMilliseconds, new { @class = "form-control" })

                                <p class="help-block">Example block-level help text here.</p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.minAvailableMemoryRequiredInMb, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.minAvailableMemoryRequiredInMb, new { @class = "form-control" })

                                <p class="help-block">Example block-level help text here.</p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.maxMemoryUsageInMb, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.maxMemoryUsageInMb, new { @class = "form-control" })

                                <p class="help-block">Example block-level help text here.</p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.maxMemoryUsageCacheTimeInSeconds, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.maxMemoryUsageCacheTimeInSeconds, new { @class = "form-control" })

                                <p class="help-block">Example block-level help text here.</p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.maxCrawlDepth, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.maxCrawlDepth, new { @class = "form-control" })

                                <p class="help-block">Example block-level help text here.</p>
                            </div>

                        </div>

                    </div>

                </div>

                <div role="tabpanel" class="tab-pane fade well" id="contact" aria-labelledby="contact-tab">

                    <div class="row">

                        <div class="col-lg-6">

                            <div class="form-group">
                                @Html.LabelFor(m => m.userAgentString, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.userAgentString, new { @class = "form-control" })

                                <p class="help-block">Example block-level help text here.</p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.downloadableContentTypes, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.downloadableContentTypes, new { @class = "form-control" })

                                <p class="help-block">Example block-level help text here.</p>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.robotsDotTextUserAgentString, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.robotsDotTextUserAgentString, new { @class = "form-control" })

                                <p class="help-block">Example block-level help text here.</p>
